{
  "name": "solo",
  "displayName": "SOLO",
  "description": "VS Code Extension for Solo'ing files and folders",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "damienbullis",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": {
    "name": "Damien Bullis",
    "email": "damienbullis@gmail.com"
  },
  "keywords": [
    "solo",
    "solomode",
    "hide",
    "files",
    "folders",
    "organize",
    "reduce",
    "clutter",
    "focus",
    "ghost",
    "ghostmode"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "properties": {
        "solo.soloMode": {
          "type": "boolean",
          "default": false,
          "description": "While solo mode is active you will only see solo'd files in the explorer",
          "title": "SOLO mode",
          "scope": "application"
        },
        "solo.solodFiles": {
          "type": "array",
          "default": [],
          "description": "Keys are paths to files that are solo'd",
          "title": "SOLO'd files",
          "scope": "application"
        },
        "solo.initialExclude": {
          "type": [
            "object",
            "false"
          ],
          "default": false,
          "description": "List of files that were already excluded when the extension was activated",
          "title": "User's initial excluded files",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "solo.mode.enable",
        "title": "Enable SoloMode",
        "icon": "$(eye-closed)"
      },
      {
        "command": "solo.mode.disable",
        "title": "Disable SoloMode",
        "icon": "$(eye)"
      },
      {
        "command": "solo.solo.update",
        "title": "UPDATE EXCLUDE"
      },
      {
        "command": "solo.solo.reset",
        "title": "RESET SOLO"
      },
      {
        "command": "solo.solo.add",
        "title": "SOLO"
      },
      {
        "command": "solo.solo.remove",
        "title": "RELEASE"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "solo.mode.disable",
          "when": "false"
        },
        {
          "command": "solo.mode.enable",
          "when": "false"
        },
        {
          "command": "solo.solo.add",
          "when": "false"
        },
        {
          "command": "solo.solo.remove",
          "when": "false"
        },
        {
          "command": "solo.solo.reset"
        }
      ],
      "view/title": [
        {
          "command": "solo.mode.disable",
          "when": "solo.soloMode == true",
          "group": "navigation"
        },
        {
          "command": "solo.mode.enable",
          "when": "solo.soloMode == false",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "solo.solo.add",
          "when": "resourcePath not in solo.solodFiles",
          "group": "navigation"
        },
        {
          "command": "solo.solo.remove",
          "when": "resourcePath in solo.solodFiles",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "solo.mode.disable",
        "key": "alt+`",
        "mac": "alt+`",
        "when": "solo.soloMode == true"
      },
      {
        "command": "solo.mode.enable",
        "key": "alt+`",
        "mac": "alt+`",
        "when": "solo.soloMode == false"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch NODE_ENV=development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "@vscode/test-electron": "^2.2.0"
  }
}
